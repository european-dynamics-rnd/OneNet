version: "3.5"
services:
  orion-provider:
    image: fiware/orion-ld:0.7.0
    hostname: orion
    container_name: fiware-orion-provider
    expose:
      - "1027"
      - "8083"
    ports:
      - "1027:1026"
    depends_on:
      - mongo-db-provider
    #command: -dbhost mongo-db -logLevel DEBUG
    command: -statCounters -dbhost mongo-db-provider -logLevel DEBUG -forwarding

  mongo-db-provider:
    image: mongo:3.6
    hostname: mongo-db-provider
    container_name: db-mongo-provider
    ports:
      - "27018:27017" 
    networks:
      - default
    command: --nojournal
#    volumes:
#      - mongo-db-provider:/data
    volumes:
        - ./data-provider:/data/db

volumes:
  mongo-db-provider: ~